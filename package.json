{
  "name": "p2p-conference",
  "version": "1.0.0",
  "description": "Serverless P2P Audio Conference System using WebRTC Full Mesh",
  "main": "out/main/index.js",
  "author": {
    "name": "P2P Conference Team",
    "email": "contact@p2pconference.app"
  },
  "homepage": "https://github.com/p2p-conference/app",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@jitsi/rnnoise-wasm": "^0.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "terser": "^5.46.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.0"
  },
  "build": {
    "appId": "com.p2pconference.app",
    "productName": "P2P Conference",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "dist/**/*",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": "build/icons",
        "to": "icons",
        "filter": [
          "*.png",
          "*.ico"
        ]
      }
    ],
    "asarUnpack": [
      "**/icons/**",
      "public/audio-processor/**"
    ],
    "mac": {
      "target": [
        "zip"
      ],
      "category": "public.app-category.social-networking",
      "icon": "build/icons/icon.png",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "sign": false
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icons/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network"
    }
  }
}
